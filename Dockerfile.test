FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsndfile1 \
    libsndfile1-dev \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
COPY backend/requirements-test.txt backend/

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -r backend/requirements-test.txt

# Copy project files
COPY . .

# Create directories for file storage (local development)
RUN mkdir -p /tmp/audioposter/photos /tmp/audioposter/audio /tmp/audioposter/waveforms /tmp/audioposter/pdfs

# Set test environment
ENV DATABASE_URL=sqlite:///./test.db
ENV REDIS_URL=redis://localhost:6379
ENV DEBUG=true

# Default command runs tests
CMD ["python", "-m", "pytest", "backend/tests/", "-v", "--tb=short", "--color=yes"]
