# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/audioposter
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=audioposter-files
S3_REGION=us-east-1
S3_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend Stripe key (REQUIRED - must have VITE_ prefix for Vite build)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key

# SendGrid Configuration
SENDGRID_API_KEY=sendgrid_api_key
FROM_EMAIL=camellia.gh@gmail.com

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
BASE_URL=http://localhost:3000
DEBUG=true

# File Processing Limits
MAX_PHOTO_SIZE=52428800    # 50MB in bytes
MAX_AUDIO_SIZE=104857600   # 100MB in bytes
MAX_AUDIO_DURATION=600     # 10 minutes in seconds

# Encryption Configuration
LOCAL_ENCRYPTION_KEY=base64_encoded_32_byte_key_here
USE_KMS_ENCRYPTION=false

# QR Code Expiration Times (in seconds)
QR_CODE_PREVIEW_EXPIRATION=604800      # 7 days for preview QR codes
QR_CODE_PERMANENT_EXPIRATION=157788000 # 5 years for paid user QR codes

# Privacy Compliance Settings
COMPANY_NAME=AudioPoster
COMPANY_ADDRESS=123 Business St, City, State 12345
PRIVACY_POLICY_URL=https://vocaframe.com/privacy
UNSUBSCRIBE_URL=https://vocaframe.com/unsubscribe
DATA_RETENTION_DAYS=90

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_UPLOAD_PER_HOUR=20
RATE_LIMIT_UPLOAD_PER_DAY=100
RATE_LIMIT_BURST_SIZE=5
RATE_LIMIT_BAN_DURATION=3600

# Content Filtering Configuration
CONTENT_FILTER_ENABLED=true
VIRUS_SCAN_ENABLED=true
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
MAX_FILE_SCAN_SIZE=104857600
