# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/audioposter
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=audioposter-files
S3_REGION=us-east-1

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@audioposter.com

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
BASE_URL=http://localhost:3000
DEBUG=true

# File Processing Limits
MAX_PHOTO_SIZE=52428800    # 50MB in bytes
MAX_AUDIO_SIZE=104857600   # 100MB in bytes
MAX_AUDIO_DURATION=600     # 10 minutes in seconds
